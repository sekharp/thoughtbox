<h1>Link Index (User Show Page)</h1> <br><br>
<%= link_to "Logout", logout_path , method: :delete %> <br><br>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div class="link-form-group">
      Link Title: <input class="form-control" type="text" id="link-title">
      Link URL: <input class="form-control" type="text" id="link-url">
    </div>
    <input class="btn btn-default pull-right" id="create-link" type="button" name="submit" value="Create Link">
  </div>
  <div class="col-sm-2"></div>
</div><br><br>

<div class="col-md-offset-5">
  <h1>Link Search</h1>
  <form class="navbar-form navbar-left" role="search">
    <div class="form-group">
      <input type="text" class="form-control" id="filter" placeholder="Search">
    </div>
  </form><br><br>
</div><br><br>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
      <h3>Latest Links</h3>
      <div id="latest-links">
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
